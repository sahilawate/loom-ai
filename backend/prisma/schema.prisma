generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String     @id @default(uuid())
  stage     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  cartItems CartItem[]
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String
  category    String
  price       Int
  imageUrl    String
  variants    Variant[]
}

model Variant {
  id        String     @id @default(uuid())
  size      String
  stock     Int
  productId String
  product   Product    @relation(fields: [productId], references: [id])
  cartItems CartItem[]
}

model CartItem {
  id        String  @id @default(uuid())
  sessionId String
  variantId String
  quantity  Int
  session   Session @relation(fields: [sessionId], references: [id])
  variant   Variant @relation(fields: [variantId], references: [id])
}

model AgentEvent {
  id        String   @id @default(uuid())
  sessionId String
  agent     String
  action    String
  createdAt DateTime @default(now())
}
